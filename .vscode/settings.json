{
  // Output CSS hasil kompilasi akan tersimpan di folder css/
  "liveSassCompile.settings.formats": [
    {
      "format": "compressed", // CSS versi minified
      "extensionName": "styles.min.css",
      "savePath": "/public/css"
    }
  ],

  // Aktifkan watch mode otomatis saat file SCSS diubah
  "liveSassCompile.settings.generateMap": true, // Buat sourcemap untuk debugging
  "liveSassCompile.settings.autoprefix": []
}
